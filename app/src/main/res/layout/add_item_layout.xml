<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding12"
    android:orientation="vertical">
    <EditText
        android:id="@+id/enter_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_name"
        android:textColorHint="@color/colorBorder"
        android:textSize="@dimen/padding12"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginRight="@dimen/padding8"
        android:layout_marginEnd="@dimen/padding8"
        android:textColor="@color/colorBlack"
        android:padding="@dimen/padding12"/>
</LinearLayout>